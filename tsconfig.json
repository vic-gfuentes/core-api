{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@contracts/*": ["src/contracts/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["config/*"],
      "@lib/*": ["lib/*"],
      "@tests/*": ["tests/*"]
    }
  }
}
